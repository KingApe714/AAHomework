<h1>Sign In</h1>
<form action="<%=session_url%>" method="POST">
    <label>Username:
        <input type="text" name="user[username]">
    </label>
    <label>Password:
        <input type="text" name="user[password]">
    </label>
    <%if flash[:errors]%>
        <ul>
            <%flash[:errors].each do |error|%>
                <li><%=error%></li>
            <%end%>
        </ul>
    <%end%>
    <input type="submit" value="Sign In">
</form>